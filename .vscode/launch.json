{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI",
      "type": "python",
      "request": "launch",
      "module": "src.main",
      "args": [
        "--port", "8765",
        "--certfile", "cf.pem",
        "--keyfile", "cf.key",
        "--llm-type", "ollama",
        "--tts-type", "xtts-v2",
        "--vad-type", "silero"
      ],
      "env": {
        "HF_ENDPOINT": "https://hf-mirror.com",
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": false
    },
    {
      "name": "Next.js Frontend",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Debug Full Stack",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "start-backend",
      "postDebugTask": "stop-backend",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack",
      "configurations": ["Python: FastAPI", "Next.js Frontend"]
    }
  ]
}
